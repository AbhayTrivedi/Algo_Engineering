#include<iostream>
#include<math.h>
#include<bits/c++io.h>
using namespace std;

int main(){

int n;
cout<<"Enter Number of Elements to be stored in an array: ";
int i;
cin>>n;
cout<<endl;
cout<<"Enter the Elements: "<<endl;
int arr[n];
for(i=0;i<=n;i++)
{
    cin>>arr[i];
}

for(i=0;i<=n-1;i++)
{
    for(int j=i+1;j<=n;j++)
    {
        if(arr[j]<arr[i])
        {
         int temp;
         temp=arr[j];
         arr[j]=arr[i];
         arr[i]=temp;
        }
    }
}
cout<<endl;
cout<<"Sorted Array is: ";
cout<<endl;
for(i=0;i<=n;i++)
{
    for(int j=1;j<=i;j++)
    {
        cout<<" ";
    }
    cout<<arr[i]<<endl;
}

cout<<endl;

return 0;
}
